@model List<ExchangeViewModel.Exchange_Rates>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Döviz Kurları</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Döviz Kodu</th>
                        <th>Birim Fİyat</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.currency</td>
                            <td>@item.exchange_rate_buy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>