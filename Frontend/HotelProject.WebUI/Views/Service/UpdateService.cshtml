@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="ServiceID" />
    <div class="form-group">
        <label>Hizmet Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-info"></span>
    </div>
    <br />
    <div class="form-group">
        <label>Hizmet İkonu</label>
        <input type="text" asp-for="Icon" class="form-control" />
        <span asp-validation-for="Icon" class="text-info"></span>
    </div>
    <br />
    <div class="form-group">
        <label>Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-info"></span>
    </div>
    <br />
    <button class="btn btn-primary">Hizmeti Güncelle</button>
</form>



