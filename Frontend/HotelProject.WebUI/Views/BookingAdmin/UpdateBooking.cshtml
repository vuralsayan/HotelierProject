@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h2>Rezervasyon Güncelleme Sayfası</h2>
<form method="post">
    <input type="hidden" asp-for="BookingID" />
    <div class="form-group">
        <label>Misafir Adı Soyadı</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label>Misafir Mail Adresi</label>
        <input type="email" asp-for="Mail" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label>Misafir Giriş Tarihi</label>
        <input type="date" asp-for="CheckIn" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label>Misafir Çıkış Tarihi</label>
        <input type="date" asp-for="CheckOut" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label>Yetişkin Sayısı</label>
        <input type="text" asp-for="AdultCount" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label>Çocuk Sayısı</label>
        <input type="text" asp-for="ChildrenCount" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label>Oda Sayısı</label>
        <input type="text" asp-for="RoomCount" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label>Şehir</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label>Ülke</label>
        <input type="text" asp-for="Country" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label>Durum</label>
        <input type="text" asp-for="Status" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label>Özel İstekler</label>
        <textarea asp-for="SpecialRequest" class="form-control" rows="5"></textarea>
    </div>
    <br />
    <div class="form-group">
        <label>Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
    </div>
    <br />
    <button class="btn btn-success">Rezervasyon Bilgilerini Güncelle</button>
</form>




