@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Başlık</th>
        <th>Fiyat</th>
        <th>Yatak Sayısı</th>
        <th>Banyo Sayısı</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.RoomID</th>
            <td>@item.RoomNumber</td>
            <td>@item.Title</td>
            <td>@item.Price</td>
            <td>@item.BedCount</td>
            <td>@item.BathCount</td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn btn-warning">Sil</a></td>
        </tr>
    }
</table>

<a href="/AdminRoom/AddRoom/" class="btn btn-primary">Yeni Oda Ekle</a>



