@model AdminMailViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post" asp-controller="AdminMail" asp-action="Index">
    <div class="form-group">
        <label>Alıcı Mail Adresi</label>
        <input type="email" asp-for="ReceiverMail" class="form-control bg-transparent" placeholder=" Alıcı Mail Adresi">
    </div>
    <div class="form-group">
        <label>Konu</label>
        <input type="text" asp-for="Subject" class="form-control bg-transparent" placeholder=" Konu">
    </div>
    <div class="form-group">
        <label>Mesajınız</label>
        <textarea asp-for="Body" asp-for="Body" rows="4" class="form-control bg-transparent" placeholder=" Mesajınız"></textarea>
    </div>
    <div class="text-left m-t-15">
        <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10"><i class="fa fa-paper-plane m-r-5"></i> Maili Gönder</button>
        <a href="/AdminMail/Index/" class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20"><i class="ti-close m-r-5 f-s-12"></i> İptal</a>
    </div>
</form>